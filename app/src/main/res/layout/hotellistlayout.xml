<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/Hotel_name_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Hotel name:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Hotel_name_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/Hotel_name_title_TextView"
            app:layout_constraintTop_toTopOf="parent"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Price_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Hotel_name_TextView"
            app:layout_constraintStart_toStartOf="@id/Hotel_name_title_TextView"
            android:text="Price:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Price_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Hotel_name_TextView"
            app:layout_constraintStart_toEndOf="@id/Price_title_TextView"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Availability_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Price_TextView"
            app:layout_constraintStart_toStartOf="@id/Hotel_name_title_TextView"
            android:text="Availability:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Availability_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Price_TextView"
            app:layout_constraintStart_toEndOf="@id/Availability_title_TextView"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/City_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Availability_TextView"
            app:layout_constraintStart_toStartOf="@id/Hotel_name_title_TextView"
            android:text="City:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/City_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Availability_TextView"
            app:layout_constraintStart_toEndOf="@id/City_title_TextView"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/starRating_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/City_TextView"
            app:layout_constraintStart_toStartOf="@id/Hotel_name_title_TextView"
            android:text="Star Ratings:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            />


        <TextView
            android:id="@+id/starRating_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/City_TextView"
            app:layout_constraintStart_toEndOf="@id/starRating_title_text_view"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/black"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>